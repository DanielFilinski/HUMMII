# ============================================================================
# Hummii API - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to Git!

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# ============================================================================
# DATABASE (PostgreSQL)
# ============================================================================
DATABASE_URL="postgresql://hummii:hummii_secure_password@localhost:5432/hummii?schema=public"

# ============================================================================
# REDIS
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password
REDIS_DB=0

# ============================================================================
# JWT SECRETS (Generate with: openssl rand -base64 64)
# ============================================================================
JWT_ACCESS_SECRET=your-super-secret-access-token-change-me-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-token-change-me-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# ============================================================================
# OAUTH2.0 - Google
# ============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# ============================================================================
# OAUTH2.0 - Apple (Optional)
# ============================================================================
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=/path/to/apple/private/key.p8
APPLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/apple/callback

# ============================================================================
# STRIPE PAYMENT
# ============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================================================
# EMAIL SERVICE
# ============================================================================
# Email Provider: console (dev), sendgrid (production)
EMAIL_PROVIDER=console
EMAIL_FROM=noreply@hummii.ca
APP_NAME=Hummii

# SendGrid (Production/Staging)
SENDGRID_API_KEY=SG.your_api_key_here
SENDGRID_WEBHOOK_SECRET=your_webhook_verification_key

# OneSignal (Push Notifications - Optional)
ONESIGNAL_APP_ID=your-onesignal-app-id
ONESIGNAL_API_KEY=your-onesignal-api-key
ONESIGNAL_REST_API_KEY=your-onesignal-rest-api-key

# ============================================================================
# GOOGLE MAPS API
# ============================================================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ============================================================================
# FILE UPLOAD (AWS S3 or compatible)
# ============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=hummii-uploads
AWS_S3_ENDPOINT=https://s3.amazonaws.com

# ============================================================================
# CAPTCHA (hCaptcha)
# ============================================================================
HCAPTCHA_SECRET_KEY=your-hcaptcha-secret-key
HCAPTCHA_SITE_KEY=your-hcaptcha-site-key

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=debug

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGIN=http://localhost:3001,http://localhost:3002

# ============================================================================
# SESSION
# ============================================================================
SESSION_SECRET=your-session-secret-change-me
SESSION_MAX_AGE=86400000

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_SWAGGER=true
ENABLE_GRAPHQL=false
ENABLE_PARTNER_PORTAL=false


# ============================================================================
# CLOUDFLARE R2 (S3-Compatible Object Storage)
# ============================================================================
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=hummii-documents

# ============================================================================
# CLOUDFLARE IMAGES (Native Image Optimization API)
# ============================================================================
CF_ACCOUNT_ID=your_cloudflare_account_id
CF_ACCOUNT_HASH=your_cloudflare_account_hash
CF_IMAGES_TOKEN=your_cloudflare_images_api_token
