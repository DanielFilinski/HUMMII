									"pm.test(\"Refresh token is rotated\", function () {",
									"    const jsonData = pm.response.json();",
									"    const oldRefreshToken = pm.environment.get('refresh_token');",
									"    // New refresh token should be different (token rotation)",
									"    pm.expect(jsonData.refreshToken).to.not.eql(oldRefreshToken);",
