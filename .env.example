# ====================================
# HUMMII - Environment Variables
# ====================================
# Copy this file to .env and fill in the actual values
# NEVER commit .env files to version control

# ====================================
# General Configuration
# ====================================
NODE_ENV=development
PORT=3000
APP_NAME=Hummii
APP_URL=http://localhost:3000

# ====================================
# Database - PostgreSQL
# ====================================
DATABASE_URL=postgresql://username:password@localhost:5432/hummii_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=hummii_dev
DATABASE_USER=username
DATABASE_PASSWORD=your_secure_password
DATABASE_SSL=false

# For production, use connection pooling
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ====================================
# Redis - Caching & Sessions
# ====================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ====================================
# Authentication & Security
# ====================================
# JWT tokens (generate with: openssl rand -base64 64)
JWT_ACCESS_SECRET=your-256-bit-secret-access-key-change-this
JWT_REFRESH_SECRET=your-256-bit-secret-refresh-key-change-this
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Password hashing (bcrypt cost factor: 10-12 for dev, 12+ for prod)
BCRYPT_ROUNDS=12

# Session secret
SESSION_SECRET=your-session-secret-key-change-this

# ====================================
# CORS & Frontend URLs
# ====================================
FRONTEND_URL=http://localhost:3001
ADMIN_URL=http://localhost:3002
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# ====================================
# Email Service - OneSignal or SMTP
# ====================================
# OneSignal
ONESIGNAL_APP_ID=your-onesignal-app-id
ONESIGNAL_REST_API_KEY=your-onesignal-rest-api-key
ONESIGNAL_USER_AUTH_KEY=your-onesignal-user-auth-key

# Alternative: SMTP (if not using OneSignal)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@hummii.ca
EMAIL_FROM_NAME=Hummii

# ====================================
# Push Notifications - OneSignal
# ====================================
PUSH_ONESIGNAL_APP_ID=your-push-app-id
PUSH_ONESIGNAL_API_KEY=your-push-api-key

# ====================================
# SMS Service - Twilio (for verification)
# ====================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_VERIFY_SERVICE_SID=your-verify-service-sid

# ====================================
# Payment Processing - Stripe
# ====================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CURRENCY=CAD
STRIPE_IDENTITY_CLIENT_ID=your-stripe-identity-client-id

# ====================================
# Maps & Geolocation - Google Maps
# ====================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_MAPS_API_KEY_SERVER=your-google-maps-server-api-key
GOOGLE_GEOCODING_API_KEY=your-geocoding-api-key

# Alternative: Mapbox
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# ====================================
# File Storage - AWS S3 or Cloudinary
# ====================================
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ca-central-1
AWS_S3_BUCKET=hummii-uploads
AWS_CLOUDFRONT_URL=https://cdn.hummii.ca

# Alternative: Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
CLOUDINARY_FOLDER=hummii

# ====================================
# OAuth Providers
# ====================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Apple Sign In
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=./secrets/apple-key.p8
APPLE_CALLBACK_URL=http://localhost:3000/auth/apple/callback

# ====================================
# AI Chatbot - OpenAI
# ====================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# ====================================
# Analytics & Monitoring
# ====================================
# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel or Amplitude
MIXPANEL_TOKEN=your-mixpanel-token
AMPLITUDE_API_KEY=your-amplitude-api-key

# ====================================
# Security & Protection
# ====================================
# Captcha - hCaptcha or reCAPTCHA
HCAPTCHA_SECRET_KEY=your-hcaptcha-secret-key
HCAPTCHA_SITE_KEY=your-hcaptcha-site-key

# reCAPTCHA v3
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
RECAPTCHA_SITE_KEY=your-recaptcha-site-key

# Rate Limiting
RATE_LIMIT_GLOBAL=100
RATE_LIMIT_AUTH=5
RATE_LIMIT_CHAT=20
RATE_LIMIT_WINDOW=1m

# IP Reputation Check
IPQUALITYSCORE_API_KEY=your-ipqs-api-key

# ====================================
# Content Moderation
# ====================================
# Perspective API (Google) - for toxic content detection
PERSPECTIVE_API_KEY=your-perspective-api-key

# ====================================
# Search - Elasticsearch (optional)
# ====================================
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elastic-password

# ====================================
# Logging
# ====================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_FILES=14d
LOG_MAX_SIZE=20m

# ====================================
# Background Jobs (if using Bull/BullMQ)
# ====================================
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=

# ====================================
# Webhooks
# ====================================
WEBHOOK_SECRET=your-webhook-secret-for-internal-services

# ====================================
# Feature Flags (optional)
# ====================================
FEATURE_CHAT_ENABLED=true
FEATURE_AI_SUPPORT_ENABLED=false
FEATURE_BACKGROUND_CHECKS_ENABLED=false
FEATURE_VIDEO_CALLS_ENABLED=false

# ====================================
# Legal & Compliance
# ====================================
PRIVACY_EMAIL=privacy@hummii.ca
SUPPORT_EMAIL=support@hummii.ca
ADMIN_EMAIL=admin@hummii.ca
COMPANY_NAME=Hummii Inc.
COMPANY_ADDRESS=123 Main St, Toronto, ON, Canada

# ====================================
# Development Tools
# ====================================
# Next.js
NEXT_TELEMETRY_DISABLED=1

# Enable debug mode
DEBUG=false
DEBUG_SQL=false

# ====================================
# Docker (for docker-compose)
# ====================================
COMPOSE_PROJECT_NAME=hummii
POSTGRES_VERSION=15
REDIS_VERSION=7
NODE_VERSION=20
